@model btlMVC01.Models.NHANVIEN
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrangchu.cshtml";
}
<!-- Cart view section -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">

                        <h4>Tài khoản của tôi</h4>

                        <div class="col-md-6">
                            <div class="aa-myaccount-register">


                                @using (Html.BeginForm("Update", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.manv)


                                        <h5> <strong> Thông tin cá nhân</strong></h5>
                                        <hr />

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.tennv, htmlAttributes: new { @class = "control-label col-md-4" })
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.tennv, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.tennv, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
          


                                        <h5> <strong> Đăng nhập tài khoản người dùng</strong></h5>
                                        <hr />

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.tendangnhap, htmlAttributes: new { @class = "control-label col-md-4" })
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.tendangnhap, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.tendangnhap, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.matkhau, htmlAttributes: new { @class = "control-label col-md-4" })
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.matkhau, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div class="form-group">
                                            <div class="col-md-offset-4 col-md-8">
                                                <input type="submit" value="Update" class="btn btn-success btn-block" />
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
