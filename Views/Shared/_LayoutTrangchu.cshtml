                            @{
                                btlMVC01.Models.btlEntities db = new btlMVC01.Models.btlEntities();
                                Dictionary<string, IEnumerable<string>> navbar = new Dictionary<string, IEnumerable<string>>();

                                List<btlMVC01.Models.LOAISANPHAM> Categories = db.LOAISANPHAM.ToList();
                                foreach (btlMVC01.Models.LOAISANPHAM cat in Categories)
                                {
                                    IEnumerable<string> subCat = db.SANPHAM.Where(x => x.maloaisp == cat.maloaisp).Select(x => x.tensp).ToList();
                                    navbar.Add(cat.tenloaisp, subCat);
                                }
                                int count = 0;
                                foreach (KeyValuePair<string, IEnumerable<string>> nav in navbar)
                                {
                                    if (count < 8)
                                    {
                                        <li>
                                            <a href="">@nav.Key<span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                @foreach (var subNav in nav.Value)
                                                {
                                                    <li><a href="@Url.Action("GetProductsByCategory","Product", new { categoryName = subNav.Trim() })">@subNav.Trim()</a></li>
                                                }
                                            </ul>
                                        </li>
                                        count++;
                                    }
                                }
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
